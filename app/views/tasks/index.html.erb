<% if user_signed_in? %>

  <h1>Tasks<small class='h'>❦</small>List</h1>

  <div class="panel panel-default">
    <table class="table table-curved table-outline-success table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Main⧁Title</th>
        <th>Created</th>
        <th>Review</th>
        <th>Content</th>
        <th>ID</th>
        <th colspan="3">CRUD⧁Area</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <!-- To whom, who wants to see All the Users Task-Tables: Uncomment those logic bellow | Dannyⓒ -->

        <% #if task.user == current_user %>
        <tr>
          <td><%= task.first_item %></td>
          <td><%= check_box_tag 'task', '1', task.created, :disabled => true, class: 'check' %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.user_id %></td>
          <td><%= link_to 'Show', task, class: 'btn btn-outline-info' %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-outline-warning' %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
        </tr>
        <% #end %>

      <% end %>
    </tbody>
  </table>
  </div>

  <br>

  <%= link_to 'New Task', new_task_path, class: 'btn btn-outline-dark btn-block' %>
<% else %>

  <div class="container">
    <h2>That's not a 'Big Picture'.. Yet!</h2>
      <p>Let's think more out of the Box..</p>
      <p>
          <img src="http://vegawoodworking.com/wp-content/uploads/2014/09/thinking-man1.png" alt="think">
      </p>
  </div>

<% end %>